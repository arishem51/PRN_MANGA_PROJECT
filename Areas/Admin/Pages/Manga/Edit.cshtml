@page "/admin/manga/{id:int}"
@model PRN_MANGA_PROJECT.Areas.Admin.Pages.Manga.EditModel
@{
    ViewData["Title"] = "Edit Manga";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Edit Manga</h2>
    <div class="d-flex gap-2">
        <a href="/admin/chapter/create?mangaId=@Model.Input.Id" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Chapter
        </a>
    <a href="/admin/manga" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Manga List
    </a>
    </div>
    </div>

<div class="row" style="padding-bottom: 100px;">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Manga Details</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input asp-for="Input.Title" class="form-control" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Author</label>
                            <input asp-for="Input.Author" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Artist</label>
                            <input asp-for="Input.Artist" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select asp-for="Input.Status" class="form-select">
                            <option value="">Select status</option>
                            <option value="Ongoing">Ongoing</option>
                            <option value="Completed">Completed</option>
                            <option value="Hiatus">Hiatus</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Input.Status" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cover Image URL</label>
                        <input asp-for="Input.CoverImageUrl" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Input.Description" rows="4" class="form-control"></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/admin/manga" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Chapters Section -->
        <div class="card mt-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Chapters (@Model.ChaptersPaged.TotalCount)</h5>
                <a href="/admin/chapter/create?mangaId=@Model.Input.Id" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i> Add Chapter
                </a>
            </div>
            <div class="card-body">
                @if (Model.ChaptersPaged.Data.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Chapter Number</th>
                                    <th>MangaDex ID</th>
                                    <th>Page Count</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chapter in Model.ChaptersPaged.Data)
                                {
                                    <tr>
                                        <td>@chapter.Id</td>
                                        <td><strong>@chapter.Title</strong></td>
                                        <td>@(chapter.ChapterNumber ?? "-")</td>
                                        <td><code class="small">@(string.IsNullOrEmpty(chapter.MangadexChapterId) ? "-" : (chapter.MangadexChapterId.Length > 20 ? chapter.MangadexChapterId.Substring(0, 20) + "..." : chapter.MangadexChapterId))</code></td>
                                        <td>@(chapter.PageCount?.ToString() ?? "-")</td>
                                        <td>@chapter.CreatedAt.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            <a href="/admin/chapter?mangaId=@Model.Input.Id" class="btn btn-sm btn-outline-info" title="View in Chapter Management">
                                                <i class="fas fa-list"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.ChaptersPaged.TotalPages > 1)
                    {
                        <nav aria-label="Chapter pagination" class="mt-3">
                            <ul class="pagination justify-content-center mb-0">
                                @if (Model.ChaptersPaged.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?id=@Model.Input.Id&chapterPage=@(Model.ChaptersPaged.Page - 1)">Previous</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.ChaptersPaged.Page - 2); i <= Math.Min(Model.ChaptersPaged.TotalPages, Model.ChaptersPaged.Page + 2); i++)
                                {
                                    <li class="page-item @(i == Model.ChaptersPaged.Page ? "active" : "")">
                                        <a class="page-link" href="?id=@Model.Input.Id&chapterPage=@i">@i</a>
                                    </li>
                                }

                                @if (Model.ChaptersPaged.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?id=@Model.Input.Id&chapterPage=@(Model.ChaptersPaged.Page + 1)">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                }
                            </ul>
                            <div class="text-center text-muted small mt-2">
                                Showing @((Model.ChaptersPaged.Page - 1) * Model.ChaptersPaged.PageSize + 1) to @(Math.Min(Model.ChaptersPaged.Page * Model.ChaptersPaged.PageSize, Model.ChaptersPaged.TotalCount)) of @Model.ChaptersPaged.TotalCount chapters
                            </div>
                        </nav>
                    }
                }
                else
                {
                    <p class="text-muted text-center mb-0">No chapters found. <a href="/admin/chapter/create?mangaId=@Model.Input.Id">Create the first chapter</a></p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Preview</h6>
            </div>
            <div class="card-body">
                <div class="d-flex gap-3">
                    <img src="@(string.IsNullOrWhiteSpace(Model.Input.CoverImageUrl) ? "https://via.placeholder.com/100x140?text=No+Img" : Model.Input.CoverImageUrl)" alt="Cover" class="img-thumbnail" style="width: 100px; height: 140px; object-fit: cover;">
                    <div>
                        <strong>@Model.Input.Title</strong>
                        <div class="text-muted small">@Model.Input.Author</div>
                        <div><span class="badge bg-secondary">@Model.Input.Status</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


