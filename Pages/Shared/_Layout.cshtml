<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Manga</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN_MANGA_PROJECT.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    @{
        var path = Context?.Request?.Path.Value?.ToLowerInvariant() ?? string.Empty;
        var isAdmin = path.StartsWith("/admin");
        var isAccount = isAdmin && path.Contains("/account");
        var isManga = isAdmin && path.Contains("/manga");

        // Sidebar layout values for admin pages
        var navbarHeightPx = 56; // default Bootstrap navbar height
        var sidebarWidthPx = 240; // fixed sidebar width
        var cssNavbarTop = $"{navbarHeightPx}px";
        var cssSidebarWidth = $"{sidebarWidthPx}px";
        var cssMainMarginLeft = $"{sidebarWidthPx}px";
        var cssSidebarHeight = $"calc(100vh - {navbarHeightPx}px)";
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">Manga</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                        </li>

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @if (isAdmin)
    {
        <aside class="bg-light border-end p-0"
               style="position:fixed; top:@cssNavbarTop; left:0; width:@cssSidebarWidth; height:@cssSidebarHeight; overflow-y:auto;">
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action @(isAccount ? "active" : "")" href="/admin/account">Account</a>
                <a class="list-group-item list-group-item-action @(isManga ? "active" : "")" href="/admin/manga">Manga</a>
            </div>
        </aside>
        <div class="container-fluid flex-grow-1">
            <main role="main" class="p-4" style="margin-left:@cssMainMarginLeft;">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
                
            </main>
        </div>
    }

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - Manga - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/validation-setup.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/comment.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>