@page "/forgotPassword"
@model PRN_MANGA_PROJECT.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 1rem;">
        <h3 class="text-center mb-4 text-primary fw-bold">Forgot Password</h3>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email address</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your registered email" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary fw-semibold">Send Reset Link</button>
            </div>

            <div class="text-center mt-3">
                <a href="/login" class="text-decoration-none small text-primary">Back to Login</a>
            </div>
        </form>
    </div>
</div>
