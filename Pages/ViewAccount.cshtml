@page "/viewaccount"
@model PRN_MANGA_PROJECT.Pages.ViewAccountModel
@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<h2>@ViewData["Title"]</h2>

<a asp-page="/CreateAccount" class="btn btn-primary mb-2">+ Thêm tài khoản</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="/EditAccount" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Sửa</a>

                    <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Bạn có chắc muốn xóa tài khoản này không?')">
                            Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
