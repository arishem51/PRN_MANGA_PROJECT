@page "/createaccount"
@model PRN_MANGA_PROJECT.Pages.CreateAccountModel
@{
    ViewData["Title"] = "Thêm tài khoản";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label>Tên đăng nhập</label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Vai trò (Role)</label>
        <select asp-for="Input.RoleName" class="form-control">
            <option value="">-- Chọn vai trò --</option>
            <option value="Manager">Manager</option>
            <option value="Author">Author</option>
            <option value="Reader">Reader</option>
        </select>
        <span asp-validation-for="Input.RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Tạo tài khoản</button>
    <a asp-page="/ViewAccount" class="btn btn-secondary">Hủy</a>
</form>
