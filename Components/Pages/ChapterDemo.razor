@page "/chapter-demo"
@using PRN_MANGA_PROJECT.Models.ViewModels

<PageTitle>Chapter UI Demo - PRN Manga Project</PageTitle>

<div class="demo-container">
    <div class="container-fluid">
        <div class="demo-header">
            <h1 class="demo-title">Chapter UI/UX Demo</h1>
            <p class="demo-subtitle">Test các tính năng UI/UX cho Chapter</p>
        </div>

        <div class="demo-sections">
            <!-- Demo Navigation -->
            <div class="demo-section">
                <h3>Navigation Demo</h3>
                <div class="demo-nav">
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <a href="/manga/1" class="btn btn-outline-primary">
                        <i class="fas fa-book"></i> Manga Detail
                    </a>
                    <a href="/manga/1/chapters" class="btn btn-outline-primary">
                        <i class="fas fa-list"></i> Chapter List
                    </a>
                    <a href="/chapter/1" class="btn btn-outline-primary">
                        <i class="fas fa-book-open"></i> Chapter Reader
                    </a>
                </div>
            </div>

            <!-- Demo Features -->
            <div class="demo-section">
                <h3>Features Implemented</h3>
                <div class="features-grid">
                    <div class="feature-card fade-in-up">
                        <div class="feature-icon">
                            <i class="fas fa-list-ul"></i>
                        </div>
                        <h5>Chapter List</h5>
                        <p>Danh sách chapters với pagination, sorting và responsive design</p>
                        <ul>
                            <li>Grid layout với hover effects</li>
                            <li>Pagination controls</li>
                            <li>Sort by date (newest/oldest)</li>
                            <li>Mobile responsive</li>
                        </ul>
                    </div>

                    <div class="feature-card fade-in-up">
                        <div class="feature-icon">
                            <i class="fas fa-book-reader"></i>
                        </div>
                        <h5>Chapter Reader</h5>
                        <p>Trình đọc manga với nhiều chế độ hiển thị</p>
                        <ul>
                            <li>Single page mode</li>
                            <li>Double page mode</li>
                            <li>Webtoon vertical mode</li>
                            <li>Navigation controls</li>
                            <li>Thumbnail navigation</li>
                        </ul>
                    </div>

                    <div class="feature-card fade-in-up">
                        <div class="feature-icon">
                            <i class="fas fa-compass"></i>
                        </div>
                        <h5>Chapter Navigation</h5>
                        <p>Component navigation có thể tái sử dụng</p>
                        <ul>
                            <li>Previous/Next navigation</li>
                            <li>Chapter list sidebar</li>
                            <li>Bookmark functionality</li>
                            <li>Share options</li>
                        </ul>
                    </div>

                    <div class="feature-card fade-in-up">
                        <div class="feature-icon">
                            <i class="fas fa-palette"></i>
                        </div>
                        <h5>Modern UI/UX</h5>
                        <p>Thiết kế hiện đại với responsive design</p>
                        <ul>
                            <li>Gradient backgrounds</li>
                            <li>Glass morphism effects</li>
                            <li>Smooth animations</li>
                            <li>Dark theme support</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Demo API Integration -->
            <div class="demo-section">
                <h3>API Integration</h3>
                <div class="api-info">
                    <div class="api-card">
                        <h5>ChapterUIService</h5>
                        <p>Service để gọi API từ Razor Pages</p>
                        <div class="api-methods">
                            <span class="method">GET</span>
                            <code>/api/chapter/manga/{id}</code>
                        </div>
                        <div class="api-methods">
                            <span class="method">GET</span>
                            <code>/api/chapter/{id}/with-images</code>
                        </div>
                        <div class="api-methods">
                            <span class="method">GET</span>
                            <code>/api/chapter/{id}/next</code>
                        </div>
                        <div class="api-methods">
                            <span class="method">GET</span>
                            <code>/api/chapter/{id}/previous</code>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Demo Routes -->
            <div class="demo-section">
                <h3>Routes Created</h3>
                <div class="routes-list">
                    <div class="route-item">
                        <code>/manga/{id}/chapters</code>
                        <span>Chapter List Page</span>
                    </div>
                    <div class="route-item">
                        <code>/chapter/{id}</code>
                        <span>Chapter Reader Page</span>
                    </div>
                    <div class="route-item">
                        <code>/manga/{id}</code>
                        <span>Manga Detail Page</span>
                    </div>
                    <div class="route-item">
                        <code>/chapter-demo</code>
                        <span>This Demo Page</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


