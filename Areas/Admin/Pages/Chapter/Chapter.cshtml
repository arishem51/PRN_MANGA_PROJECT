@page "/admin/chapter"
@model PRN_MANGA_PROJECT.Areas.Admin.Pages.Chapter.ChapterModel
@{
    ViewData["Title"] = "Chapter Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Chapter Management</h2>
    <a href="/admin/chapter/create@(Model.MangaId.HasValue ? $"?mangaId={Model.MangaId}" : "")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Chapter
    </a>
</div>

@if (Model.SelectedManga != null)
{
    <div class="alert alert-info mb-4">
        <strong>Manga:</strong> @Model.SelectedManga.Title
        <a href="/admin/chapter" class="btn btn-sm btn-outline-secondary ms-2">View All Chapters</a>
    </div>
}

<!-- Chapter Table -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Chapter Number</th>
                <th>MangaDex Chapter ID</th>
                <th>Manga</th>
                <th>Page Count</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Chapters.Any())
            {
                @foreach (var chapter in Model.Chapters)
                {
                    <tr>
                        <td>@chapter.Id</td>
                        <td>
                            <strong>@chapter.Title</strong>
                        </td>
                        <td>@(chapter.ChapterNumber ?? "-")</td>
                        <td>
                            <code class="small">@chapter.MangadexChapterId</code>
                        </td>
                        <td>
                            <a href="/admin/manga/@chapter.MangaId">Manga #@chapter.MangaId</a>
                        </td>
                        <td>@(chapter.PageCount?.ToString() ?? "-")</td>
                        <td>@chapter.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td>
                            <a href="/admin/chapter/@chapter.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteChapter(@chapter.Id)">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">No chapters found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function deleteChapter(id) {
            if (confirm('Are you sure you want to delete this chapter?')) {
                fetch('/admin/chapter?handler=Delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }
    </script>
}

