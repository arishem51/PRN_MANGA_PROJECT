@page
@model PRN_MANGA_PROJECT.Pages.Public.HomePageModel

@{
	Layout = "_Layout";
	ViewData["Title"] = "HomePage";
}

<div class="container mt-4">
	<h2 class="mb-4 text-center">Manga Library</h2>

	<!-- ======= Thanh chức năng ======= -->
	<div class="d-flex justify-content-center gap-3 mb-4">
		<a asp-page="/Public/Manga/ReadingHistory" class="btn btn-outline-secondary">
			<i class="bi bi-clock-history"></i> Lịch sử đọc
		</a>

		<a asp-page="/Public/Bookmark" class="btn btn-outline-secondary">
			<i class="bi bi-bookmark-heart"></i> Lưu truyện
		</a>

		<!-- Nút mở popup thể loại -->
		<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#tagModal">
			<i class="bi bi-tags"></i> Thể loại
		</button>
	</div>

	<!-- ======= Ô tìm kiếm ======= -->
	<form method="get" class="d-flex justify-content-center mb-4">
		<input type="hidden" name="TagId" value="@Model.TagId" />
		<input type="text" name="SearchTerm" value="@Model.SearchTerm"
			   class="form-control w-50" placeholder="Tìm manga, tác giả, hoặc artist..." />
		<button type="submit" class="btn btn-primary ms-2">Tìm kiếm</button>
		<button type="submit" class="btn btn-secondary ms-2">
			<a href="/" style="color: white">Reset</a>
		</button>

	</form>
	


	<!-- ======= Danh sách manga ======= -->
	<div class="row row-cols-1 row-cols-md-4 g-4">
		@foreach (var manga in Model.Mangas)
		{
			<div class="col">
				<div class="card h-100 shadow-sm">
					<a asp-page="/Public/Manga/Detail" asp-route-mangaId="@manga.Id">
						<img src="@manga.CoverImageUrl"
							 class="card-img-top"
							 alt="@manga.Title"
							 style="height:300px; object-fit:cover; cursor:pointer;">
					</a>
					<div class="card-body">
						<h5 class="card-title">@manga.Title</h5>
						<p class="card-text text-muted">
							<strong>@manga.Author</strong><br />
							<small>@(manga.Description?.Length > 80 ? manga.Description.Substring(0, 80) + "..." : manga.Description)</small>
						</p>
						<span class="badge bg-info">@manga.Status</span>
					</div>
				</div>
			</div>
		}
	</div>

	@if (!Model.Mangas.Any())
	{
		<p class="text-center text-muted mt-4">Không tìm thấy truyện nào.</p>
	}
	@if (Model.TotalPages > 1)
	{
		<nav aria-label="Manga pagination" class="d-flex justify-content-center mt-4">
			<ul class="pagination">
				@if (Model.PageNumber > 1)
				{
					<li class="page-item">
						<a class="page-link" asp-route-PageNumber="@(Model.PageNumber - 1)" asp-route-SearchTerm="@Model.SearchTerm"
						   asp-route-tagId="@Model.TagId">
							Previous
						</a>
					</li>
				}

				@for (int i = 1; i <= Model.TotalPages; i++)
				{
					<li class="page-item @(i == Model.PageNumber ? "active" : "")">
						<a class="page-link" asp-route-PageNumber="@i" asp-route-SearchTerm="@Model.SearchTerm"
						   asp-route-tagId="@Model.TagId">
							@i
						</a>
					</li>
				}

				@if (Model.PageNumber < Model.TotalPages)
				{
					<li class="page-item">
						<a class="page-link" asp-route-PageNumber="@(Model.PageNumber + 1)" asp-route-SearchTerm="@Model.SearchTerm"
						   asp-route-tagId="@Model.TagId">
							Next
						</a>
					</li>
				}
			</ul>
		</nav>
	}

</div>

<!-- ======= POPUP CHỌN THỂ LOẠI ======= -->
<div class="modal fade" id="tagModal" tabindex="-1" aria-labelledby="tagModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="tagModalLabel">Chọn thể loại</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				@if (Model.Tags != null && Model.Tags.Any())
				{
					<div class="d-flex flex-wrap gap-2">
						@foreach (var tag in Model.Tags)
						{
							<a asp-page="/Public/HomePage" asp-route-tagId="@tag.Id"
							   asp-route-SearchTerm="@Model.SearchTerm"
							   class="badge rounded-pill"
							   style="background-color:@tag.Color; cursor:pointer; font-size:1rem; padding:10px;">
								@tag.Name
							</a>
						}
					</div>
				}
				else
				{
					<p>Không có thể loại nào được kích hoạt.</p>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts {

	<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
	<script>
		const connection = new signalR.HubConnectionBuilder()
			.withUrl("/tagHub")
			.build();

		connection.on("ReloadTags", () => {
			console.log("🔄 Tag list updated (real-time)");
			location.reload(); // hoặc gọi Ajax refresh danh sách nếu muốn mượt hơn
		});

		connection.start()
			.then(() => console.log("✅ Connected to TagHub"))
			.catch(err => console.error("SignalR Error:", err));
	</script>
}