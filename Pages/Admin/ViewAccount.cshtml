@page "/viewaccount"
@model PRN_MANGA_PROJECT.Pages.Admin.ViewAccountModel
@{
    ViewData["Title"] = "List Account";
}

<h2>@ViewData["Title"]</h2>

<a asp-page="/Admin/CreateAccount" class="btn btn-primary mb-2">Add new Account</a>

<form method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Tìm theo tên đăng nhập..." />
    </div>
    <div class="col-md-3">
        <select name="roleFilter" class="form-select">
            <option value="">-- All roles --</option>
            @foreach (var role in Model.AllRoles)
            {
                <option value="@role" selected="@(Model.RoleFilter == role)">@role</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100">Search</button>
    </div>
    <div class="col-md-2">
        <a href="/viewaccount"
           class="btn btn-secondary w-100">
            Reset
        </a>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Accounts.Any())
        {
            @foreach (var acc in Model.Accounts)
            {
                <tr>
                    <td>@acc.Id</td>
                    <td>@acc.Username</td>
                    <td>@acc.Email</td>
                    <td>@acc.Role</td>
                    <td>@(acc.IsActive ? "Active" : "Ban")</td>
                    <td>
                        <a asp-page="/Admin/EditAccount" asp-route-id="@acc.Id" class="btn btn-warning btn-sm">Edit</a>

                        @if (acc.IsActive)
                        {
                            <form method="post" asp-page-handler="Delete" asp-route-id="@acc.Id" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Do you want ban this account?')">
                                    Ban
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Unlock" asp-route-id="@acc.Id" style="display:inline">
                                <button type="submit" class="btn btn-success btn-sm"
                                        onclick="return confirm('Do you want to Unlock this account?')">
                                    Unlock
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No any account.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/accountHub")
            .build();

        // Khi có tín hiệu từ server → reload lại trang
        connection.on("ReloadUsers", () => {
            console.log("🔁 Có thay đổi tài khoản, reload lại danh sách...");
            location.reload();
        });

        connection.start()
            .then(() => console.log("✅ Đã kết nối tới AccountHub"))
            .catch(err => console.error("❌ Lỗi SignalR:", err));
    </script>
}
<!-- ✅ PHÂN TRANG -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center mt-3">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/viewaccount"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-roleFilter="@Model.RoleFilter">
                    « Trước
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link"
                       asp-page="/viewaccount"
                       asp-route-pageNumber="@i"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-roleFilter="@Model.RoleFilter">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/viewaccount"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-roleFilter="@Model.RoleFilter">
                    Sau »
                </a>
            </li>
        </ul>
    </nav>
}
