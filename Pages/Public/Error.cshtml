@page "/Error"
@model PRN_MANGA_PROJECT.Pages.Public.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 text-center" style="width: 400px; border-radius: 1rem;">
        <h3 class="text-danger fw-bold mb-3">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Oops! Something went wrong
        </h3>

        <p class="text-muted mb-4">
            An unexpected error has occurred. Please try again later or contact support.
        </p>

        <div class="d-grid gap-2 mt-4">
            <a href="/Index" class="btn btn-primary fw-semibold">
                <i class="bi bi-house-door me-1"></i> Go Home
            </a>
        </div>

        <div class="mt-3">
            <a href="/login" class="text-decoration-none small text-primary">Back to Login</a>
        </div>
    </div>
</div>
