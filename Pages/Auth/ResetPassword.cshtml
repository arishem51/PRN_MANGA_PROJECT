@page "/resetPassword"
@model PRN_MANGA_PROJECT.Pages.Auth.ResetPasswordModel
@{
}

<form method="post">
	<div>
		<input type="hidden" asp-for="Input.Email" />
		<input type="hidden" asp-for="Input.Token" />
		<div>
			<label>Enter Your New Password</label>
			<input type="password" asp-for="Input.NewPassword" />
			<span asp-validation-for="Input.NewPassword" class="text-danger"></span>

		</div>

		<div>
			<label>Enter Your Confirm Password</label>
			<input type="password" asp-for="Input.ConfirmPassword" />
			<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
		</div>
		
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<button type="submit">Reset Password</button>
	</div>
</form>